---
import Layout from '@layouts/Base.astro';
import { Image } from 'astro:assets';
import profileRender from '@assets/profile-render.png';
import { pageConfig } from '@config/navigation/rootPageConfig';
import InfoHighlightLink from '@components/sections/home/InfoHighlightLink.astro';
import IndexHighlightSection from '@components/sections/home/IndexHighlightSection.astro';
import mapPinIcon from '@phosphor-icons/core/assets/regular/map-pin.svg';
---

<Layout
  pageTitle="Daniel Henderson-Ede"
  pageTitleOverride
  pageDescription="Creative technologist bridging beautiful design and rock-solid code. Design Engineer with 8+ years shipping accessible solutions."
  ogType="website"
>
  <section class="hero">
    <!-- Intro Block -->
    <div class="intro">
      <h1>
        <span class="hello-text">Hello, I'm</span>
        <span class="name-text">Daniel</span>
      </h1>
      <p class="tagline">
        Creative technologist bridging beautiful design and rock-solid code
      </p>
    </div>

    <!-- Profile Picture -->
    <div class="profile-picture">
      <div>
        <Image
          height={400}
          width={400}
          src={profileRender}
          alt="Playful 3D illustration of Daniel with spiky red hair and his German Shepherd companion."
          loading="eager"
          class="profile"
        />
      </div>
      <div class="role">
        <div class="role-badge">Senior Design Engineer</div>
        <div class="location-badge">
          <Image
            src={mapPinIcon}
            alt=""
            loading="eager"
            class="icon inverted"
          />
          Texas, USA
        </div>
      </div>
    </div>

    <InfoHighlightLink
      variant="about"
      href={`/${pageConfig.about.slug}`}
      linkText={pageConfig.about.pageTitle}
    >
      <p>
        I ship high quality, scalable, and accessible solutions that work for
        everyone. From prototyping new ideas to architecting systems used by
        millions. I believe the best products happen when design and engineering
        speak the same language.
      </p>
    </InfoHighlightLink>
  </section>

  <IndexHighlightSection />

  <style>
    .hero {
      display: grid;
      column-gap: var(--spacing-m);
      width: 100%;
    }

    /* Mobile: Single column */
    @media (max-width: 47.9rem) {
      .hero {
        grid-template-columns: 1fr;
      }
      .intro {
        text-align: center;
      }
    }

    /* Tablet: 2x2 grid with profile on side */
    @media (min-width: 48rem) {
      .hero {
        grid-template-columns: 2fr 1fr;
        column-gap: var(--spacing-xl);
        row-gap: var(--spacing-l);
      }
      .profile-picture {
        grid-column: 2;
        grid-row: 1 / 3;
      }
    }

    @media (max-width: 47.9rem) {
      .profile-picture {
        margin: var(--spacing-m) auto;
      }
    }

    h1 {
      margin: 0 0 var(--spacing-s) 0;
    }

    .hello-text {
      display: block;
      font-size: clamp(1.2rem, 3vw, 1.8rem);
      font-weight: var(--font-weight-body);
      color: var(--color-text-muted);
    }

    .name-text {
      display: block;
      font-size: clamp(3rem, 8vw, 5rem);
      font-weight: var(--font-weight-heading);
      color: var(--color-text);
      margin-top: -0.2em;
    }

    .tagline {
      font-size: clamp(1rem, 2.5vw, 1.3rem);
      color: var(--color-text-accent);
      font-weight: var(--font-weight-bold);
      margin: 0;
    }

    /* Role */
    .role {
      background: var(--color-text-accent);
      color: var(--color-text-inverse);
      transform: rotate(-2deg) translateY(-60px);
      padding: var(--spacing-s);
      border-radius: var(--border-radius-l);
      border: solid 2px white;
    }

    .role-badge {
      font-weight: var(--font-weight-bold);
      font-size: var(--font-size-xs);
    }

    .location-badge {
      display: flex;
      gap: var(--spacing-xxxs);
      align-items: flex-end;
    }

    /* Profile Picture */
    .profile-picture {
      width: clamp(280px, 35vw, 400px);
    }

    .profile-picture > div:first-of-type {
      height: clamp(280px, 35vw, 400px);
      padding: 0;
      background: transparent;
      border: none;
      box-shadow: none;
    }

    .profile-picture img.profile {
      border-radius: 12px 12px 99px 12px;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    @media (max-width: 47.9rem) {
      .role {
        transform: rotate(-2deg) translateY(-30px);
      }
    }
  </style>
</Layout>
