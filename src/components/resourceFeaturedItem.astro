---
interface Props {
  title: string;
  description: string;
  coverImageDarkURL: any;
  coverImageLightURL: any;
  href: string;
  showDescription: boolean;
}

const { title, href } = Astro.props;

import { Image } from "astro:assets";
import ArrowRightUp from "@assets/icon/arrow-right-up.svg";
---

<div class="interactive-card resource featured highlight featured-link">
  <div class="content">
    <a href={href} class="card-link">{title}</a>
  </div>
  <Image src={ArrowRightUp} alt="" />
</div>

<style>
  /* Import the shared styles within the style tag to scope them */
  @import "/src/styles/resource-card.css";

  /* Featured-specific styles only */
  .resource.featured {
    display: flex;
    flex: 0 0 auto;
    gap: 0;
    overflow: hidden;
    padding: 0;
    scroll-snap-align: center;
    position: relative;
    transform: translateY(100px);
    opacity: 0;
  }

  img {
    position: absolute;
    right: var(--spacing-xxs);
    top: var(--spacing-xxs);
    width: 32px;
    height: 32px;
  }

  @media (min-width: 60rem) {
    img {
      width: 64px;
      height: 64px;
    }
  }

  .content {
    padding: var(--spacing-m);
    display: flex;
    flex-direction: column;
  }

  .resource-cover {
    width: 100%;
    margin: 0;
  }

  @media (prefers-reduced-motion: no-preference) {
    .resource.featured:hover img,
    .resource.featured:focus-within img {
      transform: scale(1.05);
    }
  }

  .resource.featured:focus-within {
    border-style: solid;
  }

  a {
    font-size: var(--font-size-m);
    font-weight: var(--font-weight-bold);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  a:focus-visible {
    outline: none;
  }

  p {
    margin: 0;
  }

  .tags {
    margin-top: var(--spacing-s);
  }

  @media (max-width: 512px) {
    .resource.featured {
      flex-direction: column;
      min-height: auto;
    }
  }

  @media (max-width: 960px) {
    .resource.featured {
      width: 100%;
      max-width: 32rem;
      flex-direction: column;
      min-height: auto;
    }

    .content {
      order: 2;
      padding: var(--spacing-s) var(--spacing-m);
      flex-grow: 1;
    }

    a {
      font-size: var(--font-size-s);
      flex-grow: 1;
    }

    .resource-cover {
      order: 1;
    }
  }

  @media (min-width: 961px) {
    .resource.featured {
      width: 100%;
      max-width: 90%;
    }

    .resource-cover {
      height: 100%;
    }
  }

  @media (min-width: 1381px) {
    .resource.featured {
      max-width: 70rem;
    }
  }
</style>
