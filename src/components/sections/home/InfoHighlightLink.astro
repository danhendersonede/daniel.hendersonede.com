---
interface Props {
  href: string;
  linkText: string;
  variant: 'about' | 'cases' | 'speaking' | 'resources';
  isHeading?: boolean;
}

const { href, linkText, variant, isHeading = false } = Astro.props;
---

<div class={`floating-element info-highlight ${variant}-highlight`}>
  {
    isHeading ? (
      <h2>
        <a href={href}>{linkText}</a>
      </h2>
    ) : (
      <a href={href}>{linkText}</a>
    )
  }
  <div class="highlight-content">
    <slot />
  </div>
</div>

<style>
  /* Base floating element styles */
  .floating-element {
    background: var(--background-color);
    border: var(--border-style);
    border-radius: var(--border-radius-l);
    padding: var(--spacing-m);
    box-shadow: var(--elevation-m);
    transition: all 0.3s ease;
  }

  .floating-element:hover {
    transform: translateY(-4px) rotate(0.5deg);
    box-shadow: 0px 8px 25px rgba(0, 0, 0, 0.15);
  }

  /* Mobile: Disable transforms */
  @media (max-width: 47.9rem) {
    .floating-element:hover {
      transform: translateY(-2px) !important;
    }
  }

  /* Common link styling */
  .info-highlight a {
    display: block;
    font-size: clamp(1rem, 2vw, 1.2rem);
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
    text-decoration: none;
    margin-bottom: var(--spacing-s);
  }

  .info-highlight h2 {
    margin-top: 0;
  }

  .info-highlight h2 a {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-heading);
  }

  .info-highlight a:after {
    content: '';
    position: absolute;
    inset: 0;
  }

  .info-highlight a:hover {
    color: var(--color-text-accent);
  }

  /* Content container */
  .highlight-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xxs);
  }

  /* Paragraph content (about variant) */
  .highlight-content p {
    margin: 0;
  }

  /* Stat content (nav variants) */
  .highlight-stat {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    font-weight: var(--font-weight-body);
  }

  /* Variant-specific styling */
  .about-highlight {
    background: var(--color-gray-90);
    transform: rotate(0.3deg);
    height: fit-content;
  }

  .cases-highlight {
    transform: rotate(-1deg);
  }

  .speaking-highlight {
    transform: rotate(0.5deg);
  }

  .resources-highlight {
    transform: rotate(-0.5deg);
  }
</style>
