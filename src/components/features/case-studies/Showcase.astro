---
import Tag from '@base/Tag.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  caseStudy: CollectionEntry<'caseStudies'>;
}

const { caseStudy } = Astro.props;
---

<section class="interactive-card">
  <div class="card-image">
    <img
      src={caseStudy.data.coverImageURL.src}
      alt={`Cover image for ${caseStudy.data.pageTitle} case study`}
      loading="lazy"
    />
    <div class="image-overlay"></div>
  </div>

  <div class="card-content">
    <div class="card-main">
      <h2 class="card-title">
        <a href={`/case-studies/${caseStudy.id}`} class="card-link"
          >{caseStudy.data.pageTitle}</a
        >
      </h2>
    </div>
    {
      caseStudy.data.tags && caseStudy.data.tags.length > 0 && (
        <div class="card-tags">
          {caseStudy.data.tags.slice(0, 3).map((tag: string) => (
            <Tag type="secondary">{tag}</Tag>
          ))}
        </div>
      )
    }
  </div>
</section>

<style>
  .interactive-card {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-m);
    padding: var(--spacing-m);
    border: 2px solid var(--color-gray-80);
    border-radius: var(--border-radius);
    background: var(--background-color);
    position: relative;
    cursor: pointer;
    min-height: 280px;
  }

  .interactive-card:hover {
    border-color: var(--color-text-accent);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    transform: translateY(-4px);
  }

  .interactive-card.featured {
    border-color: var(--color-text-accent);
    background: linear-gradient(
      135deg,
      var(--background-color) 0%,
      var(--color-gray-90) 100%
    );
    border-width: 3px;
  }

  .interactive-card.featured:hover {
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    transform: translateY(-6px);
  }

  /* Image section with overlay */
  .card-image {
    flex: 0 0 250px;
    border-radius: var(--border-radius);
    overflow: hidden;
    position: relative;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.3s ease;
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      transparent 0%,
      rgba(0, 0, 0, 0.1) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .interactive-card:hover .card-image img {
    transform: scale(1.05);
  }

  .interactive-card:hover .image-overlay {
    opacity: 1;
  }

  /* Content hierarchy */
  .card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-m);
    min-width: 0;
  }

  /* Core content */
  .card-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-s);
  }

  .card-title {
    margin: 0;
  }

  .card-title a {
    margin: 0;
    font-size: var(--font-size-m);
    letter-spacing: -1px;
    line-height: 10px;
  }

  .card-title a:after {
    content: '';
    position: absolute;
    inset: 0;
  }

  .card-link {
    color: var(--color-text);
    text-decoration: none;
    font-weight: var(--font-weight-bold);
  }

  .card-link:hover {
    color: var(--color-text-accent);
  }

  .value-proposition {
    color: var(--color-text);
    font-size: var(--font-size-xs);
    line-height: var(--font-line-height);
    margin: 0;
    font-weight: 400;
  }

  .interactive-card.featured .value-proposition {
    font-size: var(--font-size-s);
    font-weight: var(--font-weight-bold);
  }

  /* Supporting details */
  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .interactive-card {
      flex-direction: column;
      gap: var(--spacing-m);
      padding: var(--spacing-m);
      min-height: auto;
    }

    .card-image {
      flex: none;
      height: 200px;
    }
  }

  /* Tablet responsive */
  @media (max-width: 1024px) and (min-width: 769px) {
    .card-image {
      flex: 0 0 200px;
    }

    .interactive-card {
      gap: var(--spacing-m);
    }
  }

  /* Focus management */
  .interactive-card:focus-within {
    outline: 3px solid var(--color-text-accent);
    outline-offset: 2px;
  }

  .card-link:focus {
    outline: none;
  }

  /* Animation support */
  @media (prefers-reduced-motion: no-preference) {
    .interactive-card {
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .card-image img {
      transition: transform 0.3s ease;
    }

    .image-overlay {
      transition: opacity 0.3s ease;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .interactive-card,
    .card-image img,
    .image-overlay {
      transition: none;
    }

    .interactive-card:hover {
      transform: none;
    }

    .interactive-card.featured:hover {
      transform: none;
    }

    .interactive-card:hover {
      transform: none;
    }
  }
</style>
