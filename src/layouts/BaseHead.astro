---
import '@fontsource-variable/inclusive-sans';
import initialFont from '@fontsource-variable/inclusive-sans/files/inclusive-sans-latin-wght-normal.woff2';
import '../styles/global.css';

interface Props {
  pageTitle: string;
  pageTitleOverride: boolean;
  pageDescription: string;
  ogType: 'website' | 'article' | 'event' | 'profile' | 'product';
  ogImageURL?: string;
  robotsNoIndex?: boolean;
}

const siteURL = 'https://www.daniel.hendersonede.com';

const {
  pageTitle,
  pageTitleOverride,
  pageDescription,
  ogImageURL = '/og-image/default.png',
  ogType,
  robotsNoIndex,
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site).href;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="color-scheme" content="dark light" />
<meta name="generator" content={Astro.generator} />
<meta name="description" content={pageDescription} />
<meta
  name="keywords"
  content="accessibility, accessibility design, accessible design, disability-owned agency, accessibility consultancy, digital accessibility, user experience, accessibility services, accessibility solutions, human-centered design"
/>
<meta name="author" content="Daniel Henderson-Ede" />
<meta
  name="robots"
  content={robotsNoIndex ? 'noindex, nofollow' : 'index, follow'}
/>

<title>
  {pageTitleOverride ? pageTitle : `${pageTitle} | Daniel Henderson-Ede`}
</title>

<meta
  property="og:title"
  content={pageTitleOverride
    ? pageTitle
    : `${pageTitle} | Daniel Henderson-Ede`}
/>
<meta property="og:description" content={pageDescription} />
<meta property="og:type" content={ogType} />
<meta property="og:url" content=`${siteURL}${Astro.url.pathname}` />
<meta property="og:image" content=`${siteURL}${ogImageURL}` />

<!-- Favicons -->
<link
  rel="icon"
  type="image/png"
  href="/favicon/favicon-48x48.png"
  sizes="48x48"
/>
<link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />
<link rel="shortcut icon" href="/favicon/favicon.ico" />
<link
  rel="apple-touch-icon"
  sizes="180x180"
  href="/favicon/apple-touch-icon.png"
/>
<meta name="apple-mobile-web-app-title" content="Daniel Henderson-Ede" />

<link rel="manifest" href="/site.webmanifest" />
<link rel="sitemap" href="/sitemap-index.xml" />

<link
  rel="preload"
  as="font"
  type="font/woff2"
  href={initialFont}
  crossorigin="anonymous"
/>

<link rel="canonical" href={canonicalUrl} />

<script
  is:inline
  defer
  data-domain="daniel.hendersonede.com"
  src="https://plausible.io/js/script.hash.outbound-links.pageview-props.tagged-events.js"
></script>
<script>
  window.plausible =
    window.plausible ||
    function () {
      (window.plausible.q = window.plausible.q || []).push(arguments);
    };
</script>
